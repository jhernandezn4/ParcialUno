<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParcialUno.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Vamos a Jugar" HorizontalTextAlignment="Center" TextColor="White" FontSize="38"/>
        </Frame>
        
        <Label Text="Para iniciar selecciona uno de los siguientes juegos" FontSize="16" Padding="30,30,30,0"/>


        
        <Button Text="Adivinar el Numero" Clicked="JuegoUno" Margin="30"></Button>
        <Button Text="Adivinar Fecha de Nacimiento " Clicked="JuegoDos" Margin="30"></Button>
    </StackLayout>

</ContentPage>
