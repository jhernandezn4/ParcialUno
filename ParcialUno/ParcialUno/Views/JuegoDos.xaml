<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParcialUno.Views.JuegoDos">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ejercicio 2" FontSize="36" HorizontalOptions="CenterAndExpand" Margin="30" />
            <Label Text="A continuación adivinaré tu fecha de tu cumpleaños, solo sigue los siguientes pasos: " Margin="30"></Label>
            <Label Text="Paso 1: A tu día de nacimiento multiplicalo por 20" Margin="30,0"></Label>
            <Label Text="Paso 2: Luego sumale 73 " Margin="30,0"></Label>
            <Label Text="Paso 3: Al resultado anterior multiplicalo por 5 " Margin="30,0"></Label>
            <Label Text="Paso 4: Para finalizar súmale la fecha del mes de tu cumpleaños " Margin="30,0"></Label>
            <Label Text="Ahora que tienes el resultado, ingresalo a continuación y presiona en Adivinar" Margin="30,30,30,30"></Label>
            <Entry Placeholder="Ingresa tu Resultado" x:Name="txtNumero" Margin="30,0" Keyboard="Numeric"  ></Entry>
            <Button Text="Adivinar" Margin="30" Clicked="Calcular" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>